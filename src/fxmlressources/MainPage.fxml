<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.RiskManagerController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane style="-fx-background-color: white;">
         <children>
            <HBox alignment="CENTER" layoutX="-2.0" layoutY="906.0" prefHeight="109.0" prefWidth="1921.0" spacing="100.0" style="-fx-background-color: white;">
               <children>
                  <Button fx:id="createProject" alignment="CENTER" mnemonicParsing="false" onAction="#displayCreateProjectPopUp" prefHeight="69.0" prefWidth="162.0" style="-fx-background-color: #38AECC; -fx-text-fill: white;" text="Create project" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="DeleteProject" alignment="CENTER" mnemonicParsing="false" onAction="#displayDeleteProjectPopUp" prefHeight="69.0" prefWidth="162.0" style="-fx-background-color: #38AECC; -fx-text-fill: white;" text="Delete Project" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="addRisk" alignment="CENTER" mnemonicParsing="false" onAction="#displayAddRiskPopUp" prefHeight="69.0" prefWidth="162.0" style="-fx-background-color: #38AECC; -fx-text-fill: white;" text="Add risk" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="ModifyRiskKnap" alignment="CENTER" mnemonicParsing="false" onAction="#displayModifyRiskPopUp" prefHeight="69.0" prefWidth="162.0" style="-fx-background-color: #38AECC; -fx-text-fill: white;" text="Modify risk" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="deleteKnap" alignment="CENTER" mnemonicParsing="false" onAction="#displayDeleteRiskPopUp" prefHeight="69.0" prefWidth="162.0" style="-fx-background-color: #38AECC; -fx-text-fill: white;" text="Delete Risk" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="addCounterMeasure" alignment="CENTER" mnemonicParsing="false" onAction="#displayAddCounterMeasurePopUp" prefHeight="69.0" prefWidth="162.0" style="-fx-background-color: #38AECC; -fx-text-fill: white;" text="Add countermeasure" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="activateCounterMeasureKnap" alignment="CENTER" mnemonicParsing="false" onAction="#activateAndDeActivateCounterMeasure" prefHeight="69.0" prefWidth="162.0" style="-fx-background-color: #38AECC; -fx-text-fill: white;" text="Active/Inactive countermeasure" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children></HBox>
            <ListView fx:id="projectFXListView" layoutX="14.0" layoutY="170.0" onMouseClicked="#setOpenProject" prefHeight="710.0" prefWidth="355.0" style="-fx-border-color: #38AECC;">
               <items>
                  <FXCollections fx:id="projectList" fx:factory="observableArrayList" />
               </items>
            </ListView>
            <TableView fx:id="riskFXTableView" layoutX="394.0" layoutY="171.0" onMouseClicked="#loadRiskDescription" prefHeight="480.0" prefWidth="1474.0" style="-fx-border-color: #38AECC; header: #38AECC;">
               <columns>
                  <TableColumn prefWidth="150" style="header-background: black;" text="Risk">
                     <cellValueFactory>
                        <PropertyValueFactory property="name" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn prefWidth="150" text="Probabiity">
                     <cellValueFactory>
                        <PropertyValueFactory property="probability" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn prefWidth="150" text="Consequence">
                     <cellValueFactory>
                        <PropertyValueFactory property="consequence" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="riskPriorityColumn" prefWidth="150" text="Priority">
                     <cellValueFactory>
                        <PropertyValueFactory property="priority" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn prefWidth="150" text="revised probability">
                     <cellValueFactory>
                        <PropertyValueFactory property="revisedProbability" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn prefWidth="150" text="revised consequence">
                     <cellValueFactory>
                        <PropertyValueFactory property="revisedConsequence" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn prefWidth="150" text="Counter measure status">
                     <cellValueFactory>
                        <PropertyValueFactory property="cmStatus" />
                     </cellValueFactory>
                  </TableColumn>
               </columns>
               <items>
                  <FXCollections fx:factory="observableArrayList">
                  </FXCollections>
               </items>
               <sortOrder>
                  <fx:reference source="riskPriorityColumn" />
               </sortOrder>
            </TableView>
            <TextArea fx:id="projectSummary" layoutX="393.0" layoutY="703.0" prefHeight="177.0" prefWidth="485.0" style="-fx-border-color: #38AECC;" />
            <TextArea fx:id="counterMeasureSummary" layoutX="1386.0" layoutY="702.0" prefHeight="178.0" prefWidth="485.0" style="-fx-border-color: #38AECC;" />
            <Label alignment="CENTER" layoutX="394.0" layoutY="653.0" prefHeight="50.0" prefWidth="484.0" text="Project summary">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <TextArea fx:id="riskDesBox" layoutX="890.0" layoutY="703.0" prefHeight="177.0" prefWidth="485.0" style="-fx-border-color: #38AECC;" />
            <Label alignment="CENTER" layoutX="890.0" layoutY="653.0" prefHeight="50.0" prefWidth="484.0" text="Risk description">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label alignment="CENTER" layoutX="1384.0" layoutY="651.0" prefHeight="50.0" prefWidth="484.0" text="Countermeasure">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Button fx:id="saveProject" alignment="CENTER" layoutX="1462.0" layoutY="103.0" mnemonicParsing="false" onAction="#saveProjects" prefHeight="50.0" prefWidth="185.0" style="-fx-background-color: #38AECC; -fx-text-fill: white;" text="Save Project" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="loadProject" alignment="CENTER" layoutX="1694.0" layoutY="103.0" mnemonicParsing="false" onAction="#loadProjects" prefHeight="50.0" prefWidth="174.0" style="-fx-background-color: #38AECC; -fx-text-fill: white;" text="Load project" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <ImageView fitHeight="178.0" fitWidth="194.0" layoutX="23.0" layoutY="-25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../Downloads/riskmanagerlogo.png" />
               </image>
            </ImageView>
            <Label layoutX="146.0" layoutY="128.0" prefHeight="35.0" prefWidth="110.0" text="Projects">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font></Label>
         </children>
      </Pane>
   </children>
</GridPane>
